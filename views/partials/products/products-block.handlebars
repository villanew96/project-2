
    <div class="column is-4">
        <div class="card is-shady">
            <div class="card-image">
                <figure class="image is-4by3">
                    <img src="{{values.picture}}" alt="{{values.name}}" class="modal-button" data-target="modal-image2">
                </figure>
            </div>
            <div class="card-content">
                <div class="content">
                    <h4>{{values.name}}</h4>
                    <p>Price ${{values.price}}</p>
                    <p>Stock {{values.quantity}}</p>
                    <span class="button is-danger modal-button addToCart" data-target="modal-image2" value="{{values.id}}">Add to Cart</span>
                </div>
            </div>
        </div>
    </div>
